@model List<Employee>
<partial name="_Notifications" />
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary"> Employee List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Employee" asp-action="Create" class="btn btn-primary"><i class="bg-info bi-plus-circle"></i>Create New Employee</a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Employee No</th>
            <th>Employee Name</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
         @foreach (var obj in Model.OrderBy(u => u.EmployeeId))
        {
            <tr>
                <td>@obj.EmployeeId</td>
                <td>@obj.EmployeeName</td>
            <td class="w-75 btn-group" role="group">
                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@obj.EmployeeId" class="btn btn-primary mx-2"><i class="bg-info bg-info bi bi-pencil-square"></i>Edit</a>
                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@obj.EmployeeId" class="btn btn-danger mx-2"><i class="bg-info bi-trash-fill">Delete</i></a>
            </td>
        </tr>
        }
    </tbody>
   
</table>
   

