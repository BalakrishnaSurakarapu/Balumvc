<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Books List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="books" asp-action="addbook" class="btn btn-primary"><i class="bg-info bi-plus-circle"></i>Create New Book</a>
        </div>
    </div>
</div>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th> Name</th>
            <th> Orders</th>
            <th> Amount</th>
            <th>Edit/Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u => u.Orders))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.Orders</td>
                <td>@obj.Amount</td>
                <td class="w-75 btn-group" role="group">
                    <a asp-controller="books" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary"><i class="bi bi bi-pencil-square"></i>Edit</a>
                    <a asp-controller="books" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi  bi-trash-fill"></i>Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>

